<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activities.CreateTaskActivity">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">



        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gl_create_category_vertical1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.03" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gl_create_category_vertical2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.97" />


        <ImageView
            android:id="@+id/arrow_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:src="@drawable/baseline_arrow_back_24"
            app:layout_constraintStart_toStartOf="@id/gl_create_category_vertical1"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_create_task"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:text="@string/create_category"
            android:textColor="@color/black"
            android:textSize="25sp"
            app:layout_constraintBottom_toBottomOf="@+id/arrow_back"
            app:layout_constraintStart_toEndOf="@+id/arrow_back"
            app:layout_constraintTop_toTopOf="@+id/arrow_back" />

        <ImageView
            android:id="@+id/iv_create_category"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="16dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_category_24"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_create_task" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/xtv_category_name"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:hint="@string/name_asterisk"
            app:layout_constraintEnd_toEndOf="@id/gl_create_category_vertical2"
            app:layout_constraintStart_toStartOf="@id/gl_create_category_vertical1"
            app:layout_constraintTop_toBottomOf="@+id/iv_create_category">

            <androidx.appcompat.widget.AppCompatAutoCompleteTextView
                android:id="@+id/edt_category_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:drawableTint="@color/app_default_background"
                android:dropDownVerticalOffset="4dp"
                android:ems="10"
                android:imeOptions="actionNext|flagNoExtractUi"
                android:inputType="textCapSentences"
                android:padding="10dp"
                android:textSize="18sp" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/xtv_category_description"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="@string/description"
            app:layout_constraintEnd_toStartOf="@+id/gl_create_category_vertical2"
            app:layout_constraintStart_toEndOf="@+id/gl_create_category_vertical1"
            app:layout_constraintTop_toBottomOf="@id/xtv_category_name">


            <androidx.appcompat.widget.AppCompatAutoCompleteTextView
                android:id="@+id/edt_category_description"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:drawableTint="@color/app_default_background"
                android:dropDownVerticalOffset="4dp"
                android:ems="10"
                android:imeOptions="actionNext|flagNoExtractUi"
                android:inputType="textMultiLine"
                android:padding="16dp"
                android:textSize="16dp" />

        </com.google.android.material.textfield.TextInputLayout>




        <Button
            android:id="@+id/btn_create_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Create"
            android:layout_marginTop="20dp"

            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/xtv_category_description" />




        <ProgressBar
            android:id="@+id/progress_bar_create_task"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>



</ScrollView>