<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/tv_item_category_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/category_name"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_margin="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
    <TextView
        android:id="@+id/tv_item_category_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/category_description"
        android:textColor="@color/black"
        android:layout_marginLeft="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_item_category_name"/>
    <CheckBox
        android:id="@+id/cb_item_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        app:layout_constraintTop_toTopOf="@+id/tv_item_category_name"
        app:layout_constraintBottom_toBottomOf="@id/tv_item_category_description"
        app:layout_constraintEnd_toEndOf="parent"/>
    <View
        android:id="@+id/item_category_view_1"
        android:layout_width="match_parent"
        android:layout_margin="5dp"
        android:layout_height="0.5dp"
        android:background="#CDC9C9"
        app:layout_constraintTop_toBottomOf="@id/tv_item_category_description"
        app:layout_constraintStart_toStartOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>